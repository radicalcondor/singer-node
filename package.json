{
  "name": "singer-node",
  "author": "Hassan Khan",
  "module": "dist/singer-node.esm.js",
  "version": "0.1.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint src",
    "format": "prettier 'src/**/*.ts' --write",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "endOfLine": "crlf"
  },
  "size-limit": [
    {
      "path": "dist/singer-node.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/singer-node.esm.js",
      "limit": "10 KB"
    }
  ],
  "dependencies": {
    "lodash.get": "^4.4.2",
    "yup": "^0.32.9"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.9.2",
    "@types/json-schema": "^7.0.7",
    "@types/lodash.get": "^4.4.6",
    "husky": "^5.0.9",
    "size-limit": "^4.9.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.1.0",
    "typescript": "^4.1.5"
  },
  "resolutions": {
    "**/@typescript-eslint/eslint-plugin": "^4.11.1",
    "**/@typescript-eslint/parser": "^4.11.1",
    "**/jest": "^26.6.3",
    "**/ts-jest": "^26.4.4",
    "**/typescript": "^4.1.3"
  }
}
